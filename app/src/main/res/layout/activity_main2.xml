<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:text="SQLliteCity"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editTextnombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:hint="Nombre"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextapellido"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTexttelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:hint="Telefono"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextdireccion"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextapellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:hint="Apellido"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/editTexttelefono"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextcod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:hint="Cod"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/btnsqldos"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextdireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:hint="Direccion"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextcod"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnsqldos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="108dp"
        android:paddingHorizontal="50dp"
        android:text="Sigiuiente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />






</androidx.constraintlayout.widget.ConstraintLayout>


